<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.etiel.myapplication" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LaunchAct"
            android:label="@string/title_activity_launch" >

        </activity>
        <activity
            android:name=".Activity_shoppingcart"
            android:label="@string/title_activity_activity_shoppingcart" >
        </activity>
        <activity
            android:name=".MostrarProd"
            android:label="@string/title_activity_mostrar_prod" >
        </activity>
        <activity
            android:name=".FiltrarActivity"
            android:label="@string/title_activity_filtrar" >
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
